  "description": "Monitor GPU allocation and availability across cluster nodes for test scheduling",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "description": "Shows total, allocated, and free GPUs plus free RDMA resources across all cluster nodes. Sorted by free GPUs (most available at top) to help identify nodes ready for test runs.",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "align": "auto",
            "cellOptions": {
              "type": "auto"
            },
            "filterable": false,
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "text",
                "value": null
              }
            ]
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Free GPUs"
            },
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background"
                }
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {
                      "color": "rgba(128, 128, 128, 0.2)",
                      "value": null
                    },
                    {
                      "color": "rgba(128, 128, 128, 0.2)",
                      "value": 0
                    },
                    {
                      "color": "rgba(50, 172, 45, 0.2)",
                      "value": 1
                    }
                  ]
                }
              },
              {
                "id": "custom.width",
                "value": 120
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Node"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 300
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Total GPUs"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 120
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Allocated GPUs"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 140
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Free RDMA"
            },
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background"
                }
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {
                      "color": "rgba(128, 128, 128, 0.2)",
                      "value": null
                    },
                    {
                      "color": "rgba(128, 128, 128, 0.2)",
                      "value": 0
                    },
                    {
                      "color": "rgba(50, 172, 45, 0.2)",
                      "value": 1
                    }
                  ]
                }
              },
              {
                "id": "custom.width",
                "value": 120
              }
            ]
          }
        ]
      },
      "gridPos": {
        "h": 16,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "options": {
        "cellHeight": "sm",
        "footer": {
          "countRows": false,
          "enablePagination": false,
          "fields": "",
          "reducer": ["sum"],
          "show": false
        },
        "showHeader": true,
        "sortBy": [
          {
            "desc": true,
            "displayName": "Free GPUs"
          }
        ]
      },
      "pluginVersion": "11.3.0",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "editorMode": "code",
          "exemplar": false,
          "expr": "sum by(node) (kube_node_status_allocatable{resource=\"nvidia_com_gpu\",node!=\"\"})",
          "format": "table",
          "instant": true,
          "legendFormat": "",
          "range": false,
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "editorMode": "code",
          "exemplar": false,
          "expr": "sum by(node) (kube_pod_container_resource_requests{resource=\"nvidia_com_gpu\",node!=\"\"}) or (sum by(node) (kube_node_status_allocatable{resource=\"nvidia_com_gpu\",node!=\"\"}) * 0)",
          "format": "table",
          "hide": false,
          "instant": true,
          "legendFormat": "",
          "range": false,
          "refId": "B"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "editorMode": "code",
          "exemplar": false,
          "expr": "sum by(node) (kube_node_status_allocatable{resource=\"rdma_roce_gdr\",node!=\"\"}) - (sum by(node) (kube_pod_container_resource_requests{resource=\"rdma_roce_gdr\",node!=\"\"}) or (sum by(node) (kube_node_status_allocatable{resource=\"rdma_roce_gdr\",node!=\"\"}) * 0))",
          "format": "table",
          "hide": false,
          "instant": true,
          "legendFormat": "",
          "range": false,
          "refId": "C"
        }
      ],
      "title": "GPU Availability by Node",
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "includeByName": {},
            "indexByName": {
              "Value #A": 1,
              "Value #B": 2,
              "Value #C": 4,
              "node": 0
            },
            "renameByName": {
              "Value #A": "Total GPUs",
              "Value #B": "Allocated GPUs",
              "Value #C": "Free RDMA",
              "node": "Node"
            }
          }
        },
        {
          "id": "filterByValue",
          "options": {
            "filters": [
              {
                "config": {
                  "id": "isNotNull",
                  "options": {}
                },
                "fieldName": "Node"
              }
            ],
            "match": "all",
            "type": "include"
          }
        },
        {
          "id": "calculateField",
          "options": {
            "alias": "Free GPUs",
            "binary": {
              "left": "Total GPUs",
              "operator": "-",
              "right": "Allocated GPUs"
            },
            "mode": "binary",
            "reduce": {
              "reducer": "sum"
            },
            "replaceFields": false
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "includeByName": {},
            "indexByName": {
              "Allocated GPUs": 2,
              "Free GPUs": 3,
              "Free RDMA": 4,
              "Node": 0,
              "Total GPUs": 1
            },
            "renameByName": {}
          }
        }
      ],
      "type": "table"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "description": "Cluster-wide GPU allocation summary showing total capacity, current usage, and available GPUs.",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
