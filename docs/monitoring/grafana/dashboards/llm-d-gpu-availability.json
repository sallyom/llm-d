        "wideLayout": true
      },
      "pluginVersion": "11.3.0",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "editorMode": "code",
          "exemplar": false,
          "expr": "sum(kube_node_status_capacity{resource=\"nvidia_com_gpu\"})",
          "instant": true,
          "legendFormat": "Total GPUs",
          "range": false,
          "refId": "TotalGPUs"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "editorMode": "code",
          "exemplar": false,
          "expr": "sum(kube_pod_container_resource_requests{resource=\"nvidia_com_gpu\"}) or vector(0)",
          "hide": false,
          "instant": true,
          "legendFormat": "Allocated GPUs",
          "range": false,
          "refId": "AllocatedGPUs"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "editorMode": "code",
          "exemplar": false,
          "expr": "sum(kube_node_status_allocatable{resource=\"nvidia_com_gpu\"}) - (sum(kube_pod_container_resource_requests{resource=\"nvidia_com_gpu\"}) or vector(0))",
          "hide": false,
          "instant": true,
          "legendFormat": "Free GPUs",
          "range": false,
          "refId": "FreeGPUs"
        }
      ],
      "title": "Cluster GPU Summary",
      "type": "stat"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
