            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "editorMode": "code",
          "exemplar": false,
          "expr": "label_replace(count by(resource) (kube_node_status_allocatable{resource=~\"rdma.*\"}), \"resource\", \"$1\", \"resource\", \"(.*)\")",
          "format": "table",
          "instant": true,
          "legendFormat": "",
          "range": false,
          "refId": "A"
        }
      ],
      "title": "RDMA Resource Type",
      "transformations": [
        {
          "id": "organize",
